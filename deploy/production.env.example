# WordPress Templates Catalog - Production Environment Configuration
# Copy this to .env in your httpdocs directory and update the values

# Application
APP_NAME="WordPress Templates Catalog"
APP_ENV=production
APP_KEY=base64:GENERATE_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_TIMEZONE=Europe/Berlin

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=wordpress_templates
DB_USERNAME=your_database_user
DB_PASSWORD=your_secure_database_password

# Templates Configuration
TEMPLATES_ROOT=/srv/templates
DEMO_URL_PATTERN=https://your-domain.com/{slug}/

# Screenshot System Configuration
# Chrome binary path (auto-detected, override if needed)
CHROME_BINARY_PATH=/usr/bin/google-chrome-stable
# Alternative for Chromium: /usr/bin/chromium-browser

# Node.js binary path (auto-detected, override if needed)
NODE_BINARY_PATH=/usr/bin/node

# Screenshot settings
SCREENSHOT_TIMEOUT=30000
SCREENSHOT_WAIT_FOR_NETWORK_IDLE=true
SCREENSHOT_DELAY=700

# API Security
API_TOKEN=GENERATE_A_SECURE_64_CHARACTER_RANDOM_STRING

# Cache Configuration
CACHE_DRIVER=file
CACHE_PREFIX=wptemplates

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false

# Queue Configuration (set to database if you want to use queues)
QUEUE_CONNECTION=sync

# Mail Configuration (for error notifications)
MAIL_MAILER=smtp
MAIL_HOST=your-smtp-host
MAIL_PORT=587
MAIL_USERNAME=your-email@your-domain.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# Logging
LOG_CHANNEL=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Security
BCRYPT_ROUNDS=12

# Localization
DEFAULT_LOCALE=en
FALLBACK_LOCALE=en

# Telescope (disable in production)
TELESCOPE_ENABLED=false

# Debugbar (disable in production)
DEBUGBAR_ENABLED=false

# Broadcasting (not used, but required by Laravel)
BROADCAST_DRIVER=log

# Filesystem
FILESYSTEM_DISK=local

# Performance
OPTIMIZE_IMAGES=true
COMPRESS_RESPONSES=true

# Rate Limiting (requests per minute)
API_RATE_LIMIT=60
WEB_RATE_LIMIT=1000

# Browser Configuration
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome-stable