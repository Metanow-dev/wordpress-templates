# WordPress Templates Catalog - Local Development Environment
APP_NAME="WordPress Templates Catalog"
APP_ENV=local
APP_KEY=base64:ataJJN0aHbkWoxn4LXe2fHzhEgCVbPUowD8j31SRmrM=
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=Europe/Berlin

# Database Configuration - SQLite
DB_CONNECTION=sqlite
DB_DATABASE=/var/www/html/database/database.sqlite
# MySQL settings (commented out when using SQLite)
# DB_HOST=mysql
# DB_PORT=3306
# DB_USERNAME=sail
# DB_PASSWORD=password
# MYSQL_EXTRA_OPTIONS=

# Templates Configuration - Local fixtures
TEMPLATES_ROOT=/var/www/html/storage/fixtures/templates
DEMO_URL_PATTERN=http://localhost/{slug}/

# Screenshot System Configuration (optional for local)
CHROME_BINARY_PATH=/usr/bin/google-chrome-stable
NODE_BINARY_PATH=/usr/bin/node

# Screenshot settings
SCREENSHOT_TIMEOUT=30000
SCREENSHOT_WAIT_FOR_NETWORK_IDLE=true
SCREENSHOT_DELAY=700

# API Security
API_TOKEN=local_development_token_123

# N8N Integration (optional for local)
N8N_CLASSIFICATION_WEBHOOK_URL=

# Redis Configuration (for Sail Docker)
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cache Configuration
CACHE_DRIVER=file
CACHE_PREFIX=wptemplates_local

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false

# Queue Configuration
QUEUE_CONNECTION=sync

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Security
BCRYPT_ROUNDS=10

# Localization
DEFAULT_LOCALE=en
FALLBACK_LOCALE=en

# Development Tools
TELESCOPE_ENABLED=true
DEBUGBAR_ENABLED=true

# Broadcasting
BROADCAST_DRIVER=log

# Filesystem
FILESYSTEM_DISK=local

# Performance
OPTIMIZE_IMAGES=false
COMPRESS_RESPONSES=false

# Rate Limiting
API_RATE_LIMIT=1000
WEB_RATE_LIMIT=100000

# Browser Configuration
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome-stable

# Mail Configuration
MAIL_MAILER=log
MAIL_FROM_ADDRESS=dev@localhost
MAIL_FROM_NAME="${APP_NAME}"
